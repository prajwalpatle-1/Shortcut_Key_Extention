{
  "manifest_version": 3,
  "name": "Nayan Deep",
  "version": "2.0",
  "description": "Use custom keyboard shortcuts to change webpage background colors.",
  "permissions": ["storage", "tabs","activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open/Close the Extension Popup"
    },
    "toggle_pick_mode": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Activate Pick Button"
    },
    "read_last_message": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Re-read the last notification"
    },
    "read_all_shortcuts": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "MacCtrl+R"
      },
      "description": "Read all saved shortcuts for this page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["languages.js","content.js"],
      "run_at": "document_end"
    }
  ]
}